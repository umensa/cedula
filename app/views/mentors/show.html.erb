<br>
<br>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="column">
      <h3><%= @mentor.mentor_name %></h3>
    </div>
    <div class="row">
      <div class="column column-40">
        <button class="button button-outline"><%= link_to 'Edit', edit_mentor_path(@mentor) %></button>
        <button class="button button-clear"><%= link_to 'Back', mentors_path %></button>
      </div>
    </div>
  </div>
</div>

<div class="container" id="sessions">
  <div class="row">
    <div class="column">
      <h3>Sessions</h3>
    </div>
    <div class="column column-90">
      <button class="button button-outline"><%= link_to 'New Session', new_session_path %></button>
    </div>
  </div>
  
  <table>
    <thead>
      <tr>
        <th> Topic</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @mentor.sessions.each do |session| %>
        <tr>
          <td><%= session.topic %></td>
          <td><%= link_to 'Show', session %></td>
          <td><%= link_to 'Edit', edit_session_path(session) %></td>
          <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
