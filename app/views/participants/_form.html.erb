<div class="container">
  <%= form_with(model: participant) do |form| %>
    <% if participant.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

        <ul>
          <% participant.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <from>
      <fieldset>
        <div class="field">
          <%= form.label :participant_name %>
          <%= form.text_field :participant_name %>
        </div>

        <div class="field">
          <%= form.label :session_id %>
          <%= form.collection_select :session_id, Session.all, :id, :topic, include_blank: true %>
        </div>

        <div class="actions button-primary">
          <%= form.submit %>
        </div>
      </fieldset>
    </from>
  <% end %>
</div>
