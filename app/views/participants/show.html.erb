<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="column">
      <h1>Participant</h1>
    </div>
    <div class="column column-50">
      <h1><%= @participant.participant_name %></h1>
    </div>
    
    <div class="column">
      <div>
        <table>
          <thead>
            <tr>
              <th> Session id</th>
              <th colspan="1"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @participant.session_id %></td>
              <td><%= link_to 'Destroy', @participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
</div>
  <div class="row">
    <div class="column">
      <button class="button button-outline"><%= link_to 'Edit', edit_participant_path(@participant) %></button>
      <button class="button button-clear"><%= link_to 'Back', session_path(@participant.session_id) %></button>
    </div>
  </div>
</div>