<br>
<br>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="column">
      <h2><%= @session.topic %></h2>
    </div>
    <div class="column">
      <button class="button button-outline"><%= link_to 'Edit Session', edit_session_path(@session) %></button>
    </div>
    <div class="column">
      <button class="button button-clear"><%= link_to 'Back', sessions_path %></button>
    </div>
  </div>

  <div class="row">
    <div class="column">
      <strong>Mentor id:</strong>
       <%= @session.mentor_id %>
    </div >
  </div>

  <div class="row">
    <div class="column">
      <strong>Mentor :</strong>
      <% this_mentor = Mentor.find(@session.mentor_id) %>
       <%= this_mentor.mentor_name %>
    </div >
  </div>

  <div class="row">
    <div class="column">
      <strong>Start time:</strong>
      <%= @session.start_time %>
    </div >
    <div class="column">
      <strong>End time:</strong>
      <%= @session.end_time %>
    </div >
  </div>

</div class="container">
  <button class="button button-outline"><%= link_to 'New participant', new_participant_path %></button>
  <div id="participants">
    <h3>participants</h3>

    <table>
      <thead>
        <tr>
          <th> Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @session.participants.each do |participant| %>
          <tr>
            <td><%= participant.participant_name %></td>
            <td><%= link_to 'Show', participant %></td>
            <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
            <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
