<br>
<br>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="column">
      <h1><%= @session.topic %></h1>
    </div>
    <div class="column column-40">
      <button class="button button-outline"><%= link_to 'Edit Session', edit_session_path(@session) %></button>
      <button class="button button-clear"><%= link_to 'Back', sessions_path %></button>
    </div>
  </div>

  <div class="row">
    <div class="column">
      <% this_mentor = Mentor.find(@session.mentor_id) %>
      <h2><%= this_mentor.mentor_name %></h2>
    </div >
    <div class="column column-40">
      <h3>Session | id <%= @session.id %></h3>
    </div>
  </div>

  <div class="row">
    <div class="column">
      <h4>Start time <u><%= readable_time(@session.start_time) %></u></h4>
    </div >
    <div class="column">
      <h4>End time <u><%= readable_time(@session.end_time) %></u></h4>      
    </div >
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="column"  id="participants">
     <h3>Participants</h3>
    </div>
    <div class="column column-80">
      <button class="button button-outline"><%= link_to 'New participant', new_participant_path %></button>
    </div>
  </div>

  <div class="row">
    <table>
      <thead>
        <tr>
          <th> Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @session.participants.each do |participant| %>
          <tr>
            <td><%= participant.participant_name %></td>
            <td><%= link_to 'Show', participant %></td>
            <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
            <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>